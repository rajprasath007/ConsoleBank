<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Website</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

<!-- Header -->
<header class="header">
    <nav class="navbar">
        <a href="#" class="logo">Bank Name</a>
        <ul class="nav-links">
            <li><a href="#services">Services</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="#login" class="btn">Login</a></li>
        </ul>
    </nav>
</header>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Welcome to Your Trusted Bank</h1>
        <p>Secure your financial future with our reliable services.</p>
        <a href="#" class="btn-primary">Get Started</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services">
    <h2>Our Services</h2>
    <div class="service-cards">
        <div class="card">
            <img src="images/service-1.jpg" alt="Open Account">
            <h3>Open an Account</h3>
            <p>Easily open a savings or checking account with us.</p>
        </div>
        <div class="card">
            <img src="images/service-2.jpg" alt="Apply Loan">
            <h3>Apply for a Loan</h3>
            <p>Get quick and easy loans at competitive rates.</p>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <p>&copy; 2024 Bank Name. All Rights Reserved.</p>
</footer>

</body>
</html>
    